include mixins/google_analytics

doctype 5
html
  head
    title Bible Community Church
    != css('home', {compress: true})

    mixin google-analytics

    block head
    
  body(data-spy="scroll", data-target=".navbar")
    #nav.navbar.navbar-fixed-top
      .navbar-inner
        .container
          h3.brand Bible Community Church
          ul.nav
            li
              a(href="#welcome") Welcome
            li
              a(href="#location") Location
            li
              a(href="#schedule") Schedule
            li
              a(href="#doctrine") Doctrine
    #content.container.container-fluid
      block content
    .footer
      .container
        a(href="/") Bible Community Church 
        | | No Rights Reserved. All we claim is Christ. | 
        a(href="https://github.com/wookimiii/bccnode", target="_blank") Github 
        |  |
        a(href="/shorter-catechisms") Catechisms
    
    script(src='//ajax.googleapis.com/ajax/libs/jquery/1.10.2/jquery.min.js')
    block javascript
