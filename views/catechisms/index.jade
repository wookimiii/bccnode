extends layout

block content
  header 
    |Catechisms
    a.menu-btn(href="#select")
      i.icon-th
  ng-view

  #list-template.hidden
    #error(ng-show='catechisms.length==0')
      |Loading...
    ul.catechisms
      li.catechism(ng-repeat='cat in catechisms | filter:filterNum',
        ng-class-even='"even"')
        .number {{cat.number}}
        .question-answer
          .question
            {{cat.question}}
            .clearfix
          .answer 
            label A: 
            {{cat.answer}}
          .clearfix
        .verses
          .verse(ng-repeat='v in cat.verses | orderBy:"order"')
            .ref(ng-click='toggle(cat.number, v.reference)')
              {{v.reference}}
            <span ng-show='isVisible(cat.number, v.reference)', ng-bind-html="v.text"></span>

  include new
  include selector
