@import 'nib'
body
  width: 100%
  padding: 30px 0
  box-sizing: border-box

header
  width: 100%
  text-align: center
  padding: 5px
  font-size: 2em;
  font-weight: 500;
  margin-bottom: 10px;
  position: fixed
  top: 0
  left: 0
  background: linear-gradient(top, white, #ccc);

ul
  margin: 0
li
  list-style-type: none;

.catechism
  padding: 5px 10px
  box-sizing: border-box

.catechism.even
  background: rgba(0,0,0, 0.03)
  padding: 5px
.number{
  float: left;
  color: #999;
  width: 20px;
}
.catechism label{
  width: 70px;
  float: left;
}
.question, .answer{
  float: left;
}
.answer, .verses{
  margin-left: 20px;
}

