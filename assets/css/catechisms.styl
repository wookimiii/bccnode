@import 'nib'
body
  width: 100%
  padding: 30px 0
  box-sizing: border-box

header
  width: 100%
  text-align: center
  padding: 5px
  font-size: 2em;
  font-weight: 500;
  margin-bottom: 10px;
  position: fixed
  top: 0
  left: 0
  background: linear-gradient(top, white, #ccc);

ul
  margin: 0
li
  list-style-type: none;

.catechism
  padding: 5px 10px
  box-sizing: border-box

.catechism.even
  background: rgba(0,0,0, 0.03)
  padding: 5px

$number-width = 40px
.number
  font-size: 2em;
  float: left
  color: #999
  width: $number-width
  position:relative
  top: 4px
  
    
.catechism label
  width: 20px
  float: left
  margin: 0

.question
  font-weight: bold
.question, .answer{
  float: left;
}
.answer, .verses{
  margin-left: $number-width
}
.ref
  color: #0088cc;

